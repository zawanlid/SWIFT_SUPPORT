<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.dnawaz.bulletinboard.persistence.BulletinReplyMapper">

	<select id="getBulletinReplyList" parameterType="string"
		resultType="BulletinReply">
		SELECT
		id,
		name,
		body,
		created_on as createdOn,
		bulletin_id as bulletinId
		FROM BULLETIN_REPLIES
		WHERE bulletin_id = #{bulletinId}
	</select>

	<insert id="createBulletinReply" parameterType="BulletinReply">
		INSERT INTO bulletin_replies (id,name,body,created_on,bulletin_id) VALUES
		(#{id}, #{name}, #{body}, #{createdOn},#{bulletinId})
	</insert>


	<delete id="deleteBulletinReply" parameterType="string">
		DELETE FROM bulletin_replies
		WHERE bulletin_id = #{bulletinId}
	</delete>
</mapper>